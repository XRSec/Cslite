# Server Configuration
CSLITE_PORT=8080
CSLITE_MODE=development
CSLITE_LOG_LEVEL=info

# Database Configuration
CSLITE_DB_DSN=user:password@tcp(localhost:3306)/cslite?charset=utf8mb4&parseTime=True&loc=Local

# Security Configuration
CSLITE_SECRET_KEY=your-secret-key-here-change-in-production
CSLITE_JWT_SECRET=your-jwt-secret-here-change-in-production

# API Configuration
CSLITE_API_RATE_LIMIT=60
CSLITE_ALLOW_REGISTER=true

# File Storage
CSLITE_FILE_DIR=/var/cslite/files

# Cron Configuration
CSLITE_CRON_ENABLED=true

# Agent Configuration
AGENT_HEARTBEAT_INTERVAL=60
AGENT_COMMAND_POLL_INTERVAL=30